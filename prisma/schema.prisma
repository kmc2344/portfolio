generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Work {
  id        Int      @id @default(autoincrement())
  title     String
  desc      String
  image     String?   // ← OK（任意）
  createdAt DateTime @default(now())
}

model Project {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  title       String
  summary     String
  overview    String
  background  String
  approach    String
  result      String
  image       String?
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
}
